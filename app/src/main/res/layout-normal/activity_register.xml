<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="REGISTRO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textStyle="normal|bold"
            android:textColor="#696969"
            android:background="#ffffff" />

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:background="#ffffff">


            <TextView
                android:text="Nombre del equipo en plataforma:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="0.11"
                android:layout_marginTop="5dp"
                android:textStyle="normal|bold"
                android:background="#ffffff"
                android:textColor="#696969" />

            <EditText
                android:id="@+id/editText_nombreEquipo"
                android:hint="Nombre de equipo en plataforma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"

                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textSize="12sp"
                android:textColor="#696969"
                android:backgroundTint="#696969" />

            <TextView
                android:text="Datos de acceso a la plataforma:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="0.11"
                android:layout_marginTop="20dp"
                android:textStyle="normal|bold"
                android:background="#ffffff"
                android:textColor="#696969" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_correoElectronico"
                android:hint="Correo electrónico (Cuenta)"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:textSize="12sp"
                android:textColor="#696969"
                android:backgroundTint="#696969" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Usuario"
                android:id="@+id/editText_usuario"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:textSize="12sp"
                android:textColor="#696969"
                android:backgroundTint="#696969" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText_contrasena"
                android:hint="Contraseña"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:textColor="#696969"
                android:backgroundTint="#696969" />


            <Button
                android:id="@+id/button_registrarse"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="Registarse"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#696969" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>